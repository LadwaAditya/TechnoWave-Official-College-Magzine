<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="always">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/parallex_view"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="?attr/colorPrimary"
                android:elevation="@dimen/appbar_elevation"
                android:orientation="vertical">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:elevation="0dp"
                    android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                    <android.support.v4.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="?attr/listPreferredItemHeight" />
                </android.support.v7.widget.Toolbar>
            </LinearLayout>


            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/framecontent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="@dimen/keyline_right"
                android:layout_marginLeft="@dimen/keyline_left"
                android:layout_marginRight="@dimen/keyline_right"
                android:layout_marginStart="@dimen/keyline_left"
                android:layout_marginTop="100dp"
                android:background="@color/gray"
                android:elevation="@dimen/appbar_elevation">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:scrollbars="vertical"
                    android:text="@string/lorem" />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:elevation="@dimen/appbar_elevation" />
            </FrameLayout>

        </RelativeLayout>

    </ScrollView>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_gravity="start"
        android:background="@android:color/darker_gray"
        android:cacheColorHint="@android:color/darker_gray"
        android:choiceMode="singleChoice"
        android:dividerHeight="@null"

        android:padding="32dp" />

</android.support.v4.widget.DrawerLayout>
