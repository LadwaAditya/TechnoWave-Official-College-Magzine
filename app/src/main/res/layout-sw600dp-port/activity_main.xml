<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:overScrollMode="always">

    <!--Main Content-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/col"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/my_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="?attr/colorPrimary"
                    android:elevation="@dimen/appbar_elevation"
                    android:orientation="vertical">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:elevation="0dp"
                        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="?attr/listPreferredItemHeight" />
                    </android.support.v7.widget.Toolbar>
                </LinearLayout>

                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

                    android:id="@+id/framecontent"
                    android:layout_width="@dimen/frame_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="@dimen/keyline_right"
                    android:layout_marginLeft="@dimen/keyline_left"
                    android:layout_marginRight="@dimen/keyline_right"
                    android:layout_marginStart="@dimen/keyline_left"
                    android:layout_marginTop="@dimen/frame_top_margin"
                    android:background="@color/gray"
                    android:elevation="@dimen/appbar_elevation">


                </FrameLayout>


            </RelativeLayout>

        </ScrollView>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:elevation="@dimen/appbar_elevation" />
    </RelativeLayout>


    <!--Drawer List-->
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/darker_gray"
        android:cacheColorHint="@android:color/darker_gray"
        android:choiceMode="singleChoice"
        android:dividerHeight="@null"
        android:padding="15dp"
        android:paddingTop="32dp" />

</android.support.v4.widget.DrawerLayout>
